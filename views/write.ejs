</head>
<body>
    <div>
    <div class="form">
        <form class="form-a" action="write/postWrite" method="POST" name="write-form"> 
          <!-- 메인 form  -->
          <div class="write">
            <span class="start-write">"당신만의"</span>
            <div> 레시피 를</div>
            <div> 작성해 주세요</div>
          </div>

          <!-- 제목 -->
          <div class="title">Title</div>
          <input
            class="title-bax"
            type="text"
            placeholder=" 제목을 입력하세요"
            name="title"
            class="t"
            required
          />
          <!-- 카테고리 -->
          <div class="title">카테고리</div>
          <select name="category">
            <option value="선택">선택</option>
            <option value="meat">고기</option>
            <option value="fruit">과일</option>
            <option value="fish">생선</option>
            <option value="vegetable">채소</option>
            <option value="sauce">소스</option>
          </select>
          <!-- 메뉴 -->
          <div class="title">메뉴</div>
          <input
            class="title-bax"
            type="text"
            placeholder=" 메뉴를 입력하세요"
            name="menu"
            class="t"
            required
            id="search-menu"
          />
          <div class="result-menu"></div>
          <button type="button" class="search-Menu-button">검색</button>
          
          <!-- 재료검색 -->
          <div class="title">재료검색</div>
          <div class="menu">
            <input
              class="title-bax"
              type="text"
              name="searchIngredient"
              required
              id="search-input"
            />
            <button type="button" class="search-button">검색</button>
            <div class="menubox" id="results"></div>
            <div class="resultIngredi"></div>
          </div>

          <!--  게시글 -->
          <div class="title">게시글</div>
          <textarea id="summernote" name="editordata" class="data"></textarea>
          <button type="submit" class="submit" value="등록">등록</button>
        </form>
      </div>
    </div>
</body>
</html>

