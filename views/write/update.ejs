  <body>
    <div class="all">
        <form class="form" action="write/postWrite" method="POST" name="write-form"> 
        <!-- 메인 문구  -->
            <div class="write">
              <span id="write1">"당신만의"</span> <span id="write2">레시피</span><span id="write3">를 작성해주세요</span>
            </div>
  
            <!-- 제목 -->
            <div class="title">
              <div>Title</div>
              <input
                 class="title-box"
                 type="text"
                 placeholder=" 제목을 입력하세요"
                 name="title"
                 class="t"
                 required
               />
            </div> 
  
            <!-- 카테고리 -->
             <div class="title">
              <div>카테고리</div>
              <select name="category">
              <option value="선택">선택</option>
              <option value="meat">고기</option>
              <option value="fruit">과일</option>
              <option value="fish">생선</option>
              <option value="vegetable">채소</option>
              <option value="sauce">소스</option>
              </select>
            </div>
  
            <!-- 메뉴 -->
            <div class="title">
              <div>메뉴</div>
              <input class="title-box" type="text" placeholder=" 메뉴를 입력하세요" name="menu" class="t" required id="search-menu" />
              <div class="result-menu"></div>
              <button type="button" class="search-Menu-button">검색</button>
            </div>
            
            <!-- 재료검색 -->
            <div class="title">
              <div>재료검색</div>
              <input class="title-box" type="text" placeholder=" 재료를 입력하세요" name="searchIngredient" required id="search-input"/>
              <button type="button" class="search-button">검색</button>
            </div>
  
            <div class="ingredi-box" id="results"></div>
            <div class="resultIngredi"></div>
            <!--  게시글 -->
            <div class="title">
              <div>게시글</div>          
              <textarea id="summernote" name="editordata" class="data"></textarea>
            </div>
             <!--제출 버튼-->
            <button type="submit" class="submit" value="등록">등록</button>
