<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= category %> Posts</title>
</head>
<body>
    <h1><%= category %> Category Posts</h1>
    <% if(posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>No posts available for this category.</p>
    <% } %>
</body>
</html>
